<div class="container">
    <div class="row">
        <div class="span3 side">
			<%- partial('plugins/category-menu', { categories: categories }) %>
            <%- partial('plugins/contributors', { contributors: config.plugins.contributors, authors: authors, authorsOrder: authorsOrder }) %>
        </div>
        <div class="span9 articles">
            <div class="well bg">
                <div class="page-header">
                    <h1>Topic : <%= cates[0] && cates[0].head.categories %> <span class="badge badge-info">( <%= cates.length %> )</span></h1>
                </div>

                <ul class="lists">
                    <% cates.forEach(function(article) { %>
                    <li>
                        <h3>
                            <a href="/post/<%= article._file %>"><%= article.head.title %></a> 
                        </h3>
                        <small>by <%= article.head.author %> / <%= article.head.published %></small>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
</div><!-- /container -->

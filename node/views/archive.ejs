<div class="container page-archive">
    <div class="row">
        <div class="span3">
            <div id="author" class="well">
                <div>
                    <h3>About Author</h3>
                    <ul class="thumbnails">
                        <li>
                            <a class="thumbnail">
                                <img src="<%= archive.author._gravatar %>" />
                            </a>
                        </li>
                    </ul>
                    <p>
                        <strong><%= archive.author.head.name %></strong><br/>
                        blog: <a href="<%= archive.author.head.blog %>" target="_blank"><%= archive.author.head.blog %></a><br/>
                        twitter: <a href="http://twitter.com/<%= archive.author.head.twitter %>" target="_blank">@<%= archive.author.head.twitter %></a><br/>
                        github: <a href="https://github.com/<%= archive.author.head.twitter %>" target="_blank"><%= archive.author.head.github %></a>
                    </p>
                    <p>
                        <a href="https://twitter.com/<%= archive.author.head.twitter %>" class="twitter-follow-button" data-show-count="true">Follow @<%= archive.author.head.twitter %></a>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                    </p>
                    <p>
                        <%- archive.author.body %>
                    </p>
                </div>
                <div>
                    <h3>About this Article</h3>
                    <p>
                        <h5>Date Released:</h5>
                        <span><%= archive.head.published %></span>
                    </p>
                </div>
            </div>
            <%- partial('plugins/category-menu', { categories: categories }) %>
            <%- partial('plugins/recents', { config: config.recents, dates: dates }) %>
        </div>
        <div class="span9">
            <div class="row">
                <div class="span9">
                    <div class="well bg">
                        <% if(archive.head.important) { %><div class="pull-right bookmark"></div><% } %>
                        <div class="page-header">
                            <h1><%= archive.head.title %></h1>
                        </div>

                        <div class="pull-right social-area">
                            <%- partial('plugins/twitter', { config: config, archive: archive }) %>
                            <%- partial('plugins/google-plus', { config: config.plugins.google, archive: archive }) %>
                            <%- partial('plugins/facebook', { config: config, archive: archive }) %>
                        </div>

                        <div class="markdown-wrapper">
                            <%- archive.html %>
                        </div>
                        <hr />
                        <%- partial('plugins/prev-next', { prev: archive.prev, next: archive.next }) %>

                        <%- partial('plugins/disqus', { archive: archive, disqus: config.plugins.disqus } ) %>
                    </div>
                </div>
            </div>
            <div class="row">
            </div>
        </div>
    </div>
